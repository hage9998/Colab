{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "isolatedModules": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": false,
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": false,
    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "composite": true,
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
